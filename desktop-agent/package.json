{
  "name": "tatuticket-agent",
  "version": "1.0.0",
  "description": "TatuTicket Desktop Agent - Invent√°rio e Acesso Remoto",
  "main": "src/main/main.js",
  "author": {
    "name": "TatuTicket",
    "email": "suporte@tatuticket.com"
  },
  "homepage": "https://tatuticket.com",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "pack": "electron-builder --dir"
  },
  "dependencies": {
    "auto-launch": "^5.0.6",
    "axios": "^1.6.2",
    "dotenv": "^17.2.3",
    "electron-log": "^5.0.1",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.6.2",
    "node-machine-id": "^1.1.12",
    "socket.io-client": "^4.6.1",
    "systeminformation": "^5.21.20"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.tatuticket.agent",
    "productName": "TatuTicket Agent",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icons/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "assets/icons/icon.icns",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icons/icon.png",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "TatuTicket Agent"
    },
    "publish": {
      "provider": "github",
      "owner": "your-github-username",
      "repo": "tatuticket-agent",
      "releaseType": "release"
    }
  }
}
