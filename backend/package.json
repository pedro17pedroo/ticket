{
  "name": "tatuticket-backend",
  "version": "1.0.0",
  "description": "Backend compartilhado para TatuTicket - Sistema de gest√£o de tickets",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "seed": "node src/scripts/seed.js",
    "test": "NODE_ENV=test mocha --recursive --require @babel/register --require ./tests/setup.js tests/**/*.test.js",
    "test:unit": "NODE_ENV=test mocha --recursive --require @babel/register --require ./tests/setup.js tests/unit/**/*.test.js",
    "test:integration": "NODE_ENV=test mocha --recursive --require @babel/register --require ./tests/setup.js tests/integration/**/*.test.js",
    "test:e2e": "NODE_ENV=test mocha --recursive --require @babel/register --require ./tests/setup.js tests/e2e/**/*.test.js",
    "test:security": "NODE_ENV=test mocha --require @babel/register --require ./tests/setup.js tests/multi-tenant-security.test.js",
    "test:catalog": "NODE_ENV=test mocha --require @babel/register --require ./tests/setup.js tests/integration/catalog.test.js tests/e2e/catalog-workflow.test.js",
    "test:rbac": "NODE_ENV=test mocha --require @babel/register --require ./tests/setup.js tests/integration/rbac.test.js",
    "test:knowledge": "NODE_ENV=test mocha --require @babel/register --require ./tests/setup.js tests/integration/knowledge.test.js",
    "test:slas": "NODE_ENV=test mocha --require @babel/register --require ./tests/setup.js tests/integration/slas.test.js",
    "test:auth": "NODE_ENV=test mocha --require @babel/register --require ./tests/setup.js tests/integration/auth.test.js",
    "test:org-structure": "NODE_ENV=test mocha --require @babel/register --require ./tests/setup.js tests/integration/organizational-structure.test.js",
    "test:priorities-types": "NODE_ENV=test mocha --require @babel/register --require ./tests/setup.js tests/integration/priorities-types.test.js",
    "test:hours-bank": "NODE_ENV=test mocha --require @babel/register --require ./tests/setup.js tests/integration/hours-bank.test.js",
    "test:comments": "NODE_ENV=test mocha --require @babel/register --require ./tests/setup.js tests/integration/comments.test.js",
    "test:coverage": "NODE_ENV=test c8 --reporter=text --reporter=html --reporter=lcov npm test",
    "test:coverage:report": "NODE_ENV=test c8 --reporter=text --reporter=html --reporter=lcov npm test && open coverage/index.html",
    "test:watch": "NODE_ENV=test mocha --recursive --require @babel/register --require ./tests/setup.js tests/**/*.test.js --watch",
    "test:ci": "NODE_ENV=test c8 --reporter=text --reporter=lcov npm test",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix"
  },
  "keywords": [
    "tickets",
    "helpdesk",
    "saas"
  ],
  "author": "Equipa TatuTicket",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.13.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "imap-simple": "^5.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mailparser": "^3.7.5",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^4.2.1",
    "node-imap": "^0.9.6",
    "nodemailer": "^6.9.7",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "redis": "^4.6.11",
    "sequelize": "^6.35.1",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^13.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "@babel/register": "^7.22.15",
    "c8": "^9.0.0",
    "chai": "^4.3.10",
    "eslint": "^8.55.0",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.2",
    "sinon": "^21.0.0",
    "supertest": "^7.1.4"
  }
}
