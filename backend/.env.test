# Configurações de Ambiente para Testes

# Banco de Dados de Teste (SQLite em memória para velocidade)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ticket_system_test
DB_USER=test_user
DB_PASS=test_password
DB_DIALECT=sqlite
DB_STORAGE=:memory:

# JWT
JWT_SECRET=test_jwt_secret_key_for_testing_only
JWT_EXPIRES_IN=1h

# Email (Mock para testes)
EMAIL_HOST=smtp.test.com
EMAIL_PORT=587
EMAIL_USER=test@empresa.com
EMAIL_PASS=test_password
EMAIL_FROM=noreply@empresa.com

# Ambiente
NODE_ENV=test
PORT=3001

# Logs
LOG_LEVEL=error

# Upload (Diretório temporário para testes)
UPLOAD_DIR=./tests/temp/uploads

# Rate Limiting (Desabilitado para testes)
RATE_LIMIT_ENABLED=false

# MongoDB (Para logs de auditoria em testes)
MONGODB_URI=mongodb://localhost:27017/tatuticket_test_logs